@model TravelTour.Models.Tour

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Tour</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên Tour
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenTour, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenTour, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giá bán
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Chi tiết
        <div class="col-md-10">
            <textarea name="Mota"></textarea>
        </div>
    </div>

    <div class="form-group">
        Hình Ảnh
        <div class="col-md-10">
            <input type="file" name="fileupload" />
            @ViewBag.ThongBao
        </div>
    </div>

    <div class="form-group">
        Thời gian khởi hành
        <div class="col-md-10">
            @Html.EditorFor(model => model.Thoigian, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Thoigian, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Số lượng còn
        <div class="col-md-10">
            @Html.EditorFor(model => model.Soluongcon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Soluongcon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Đơn vị vận chuyển
        <div class="col-md-10">
            @Html.EditorFor(model => model.Vanchuyen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Vanchuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ngày khởi hành
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngaykhoihanh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngaykhoihanh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ngày về
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngayve, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngayve, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Trong/Ngoài nước
        <div class="col-md-10">
            @Html.DropDownList("MaCD")
        </div>
    </div>

    <div class="form-group">
        Khu vực trong nước
        <div class="col-md-10">
            @Html.DropDownList("MaCDKV")
        </div>
    </div>

    <div class="form-group">
        Khu vực ngoài nước
        <div class="col-md-10">
            @Html.DropDownList("MaCDKVNN")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo Tour" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Tour")
</div>
