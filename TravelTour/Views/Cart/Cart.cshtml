@using TravelTour.Models
@model List<Cart>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutOrder.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin đặt hàng</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/base.css">
    <link rel="stylesheet" href="~/Content/infomation.css">
    <link rel="stylesheet" href="~/Content/style.css">
</head>

<body>
    @{ KHACHHANG kh = (KHACHHANG)Session["Account"];}

    <section>
        <div class="content-banner">
        </div>
    </section>
    <div class="container">
        <div class="info__box">
            <h3 class="info__heading-1">Thông tin đặt tour</h3>
            @using (Html.BeginForm())
            {@Html.ValidationSummary(true)
            <div class="info">
                <div class="info__left">
                    @if (Session["Account"] != null)
                    {
                        <h4 class="info__heading">Khách hàng</h4>
                        <div class="input-group">
                            <div class="input-title">Tên khách hàng <span>*</span></div>
                            <input class="input-text" value="@kh.HoTen" required type="text" placeholder="Nhập họ và tên"/>
                        </div>
                        <div class="input-group">
                            <div class="input-title">Số điện thoại<span>*</span></div>
                            <input class="input-text" value="@kh.DienthoaiKH" required type="number" placeholder="Nhập SĐT" />
                        </div>
                        <div class="input-group">
                            <div class="input-title">Địa chỉ mail<span>*</span></div>
                            <input class="input-text" name="" placeholder="example@mail.com" required type="email" value="@kh.Email" />
                        </div>
                        <div class="form-group">
                            <div class="input-group w-50">
                                <div class="input-title">Địa chỉ</div>
                                <input class="input-text" type="text" value="@kh.DiachiKH" />
                            </div>
                        </div>
                    }
                    @if (Session["Account"] == null)
                    {
                        <h4 class="info__heading">Khách hàng</h4>
                        <div class="input-group">
                            <div class="input-title">Tên khách hàng <span>*</span></div>
                            <input class="input-text" placeholder="Nhập họ tên" required type="text" name="HotenKH" />
                        </div>
                        <div class="input-group">
                            <div class="input-title">Số điện thoại<span>*</span></div>
                            <input class="input-text" placeholder="Số điện thoại" required type="number" name="Dienthoai" />
                        </div>
                        <div class="input-group">
                            <div class="input-title">Địa chỉ mail<span>*</span></div>
                            <input class="input-text"  placeholder="example@mail.com" required type="email" name="Email" />
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-title">Địa chỉ</div>
                                <input class="input-text" type="text" name="Diachi" />
                            </div>
                        </div>
                    }
                </div>

                @foreach (var item in Model)
                {
                    <div class="info__right">
                        <h4 class="info__heading">Tour</h4>
                        <div class="input-group">
                            <div class="input-title">Điểm đến: </div>
                            <p>@Html.DisplayFor(model => item.tTenTour)</p>
                        </div>
                        <div class="input-group">
                            <div class="input-title">Thời gian khởi hành: </div>
                            <p>@Html.DisplayFor(model => item.tThoigian)</p>
                        </div>
                        <div class="form-group">
                           
                            <div class="input-group">
                                <div class="input-title">Giá tiền: </div>
                                <p>@Html.DisplayFor(model => item.dGiaban)</p>
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="input-title">Phương tiện di chuyển:  </div>
                            <p>@Html.DisplayFor(model => item.tVanchuyen)</p>
                        </div>
                    </div>
                }

            </div>
            <input type="submit" value="Đồng ý" />
        }
        </div>
    </div>

    <!-- -----Begin Footer----- -->
